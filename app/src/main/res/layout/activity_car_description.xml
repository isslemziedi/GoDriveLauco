<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carDesc"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"

                    android:background="@color/beige"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageViewGoBack"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="48dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/back" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="80dp"
                        android:text="Car Details"
                        android:textColor="@color/brown"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewGoBack"
                        app:layout_constraintEnd_toStartOf="@+id/imageView5"
                        app:layout_constraintHorizontal_bias="0.857"
                        app:layout_constraintStart_toEndOf="@+id/imageViewGoBack"
                        app:layout_constraintTop_toTopOf="@+id/imageView4" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imageViewGoBack"
                        app:srcCompat="@drawable/fav_btn" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="378dp"
                        android:layout_height="207dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginEnd="36dp"
                        android:layout_marginBottom="96dp"
                        android:src="@drawable/mesarati_car"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/imageView4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.487"
                        app:layout_constraintStart_toStartOf="parent"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="320dp"
                    android:background="@drawable/white_bg_top_corner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="26dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Title"
                                android:textColor="@color/brown"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/star" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="16dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="26dp"
                            android:text="description text"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="285dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/car_section1"
                                        android:layout_width="0dp"
                                        android:layout_height="120dp"
                                        android:layout_weight="0.333"
                                        android:background="#EFECEC"
                                        android:gravity="center"
                                        android:orientation="vertical">


                                        <ImageView
                                            android:id="@+id/imageView_Capacity1"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_margin="8dp"
                                            android:contentDescription="Car Total Capacity"
                                            app:srcCompat="@drawable/capacity_icon" />


                                        <TextView
                                            android:id="@+id/textView_car_capacity1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp"
                                            android:text=" Total  Capacity"
                                            android:textAlignment="center"
                                            android:textColor="@color/black"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/car_section2"
                                        android:layout_width="0dp"
                                        android:layout_height="120dp"
                                        android:layout_marginStart="16dp"
                                        android:layout_weight="0.333"
                                        android:background="#EFECEC"
                                        android:gravity="center"
                                        android:orientation="vertical">


                                        <ImageView
                                            android:id="@+id/imageView_highest_speed"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_margin="8dp"
                                            android:contentDescription="Car Highest Speed"
                                            app:srcCompat="@drawable/speed_icon" />


                                        <TextView
                                            android:id="@+id/textView_car_speed"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="8dp"
                                            android:text="Highest Speed"
                                            android:textAlignment="center"
                                            android:textColor="@color/black"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/car_section3"
                                        android:layout_width="0dp"
                                        android:layout_height="120dp"
                                        android:layout_marginStart="16dp"
                                        android:layout_weight="0.333"
                                        android:background="#EFECEC"
                                        android:gravity="center"
                                        android:orientation="vertical">


                                        <ImageView
                                            android:id="@+id/imageView_engine_output"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_margin="8dp"
                                            android:contentDescription="Car Engine Output"
                                            app:srcCompat="@drawable/engine_icon" />


                                        <TextView
                                            android:id="@+id/textView_cengine_output"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="8dp"
                                            android:text="Engine Output"
                                            android:textAlignment="center"
                                            android:textColor="@color/black"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                </LinearLayout>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:layout_marginTop="16dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:padding="8dp">


                                    <ImageView
                                        android:id="@+id/ivRenterPhoto"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginStart="16dp"
                                        android:contentDescription="Renter Photo"
                                        android:src="@drawable/default_avatar" />


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="16dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tvRenterName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Isslem Ziedi"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvRenterRole"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Renter"
                                            android:textColor="@android:color/darker_gray"
                                            android:textSize="14sp" />
                                    </LinearLayout>


                                    <ImageButton
                                        android:id="@+id/btnMessage"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginEnd="8dp"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:contentDescription="Send Message"
                                        android:src="@drawable/ic_message"
                                        tools:ignore="TouchTargetSizeCheck" />


                                    <ImageButton
                                        android:id="@+id/btnCall"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginEnd="16dp"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:contentDescription="Call Renter"
                                        android:src="@drawable/ic_call"
                                        tools:ignore="TouchTargetSizeCheck" />

                                </LinearLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="75dp">

                                    <androidx.appcompat.widget.AppCompatButton
                                        android:id="@+id/AddCardBtn"
                                        style="@android:style/Widget.Button"
                                        android:layout_width="280dp"
                                        android:layout_height="50dp"
                                        android:background="@color/brown"
                                        android:text="Book Car"
                                        android:textColor="@color/white"
                                        android:textSize="20sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>



                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

